{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python ~/.claude-hooks/hooks/auxiliary/root_protection.py"
          },
          {
            "type": "command",
            "command": "python ~/.claude-hooks/hooks/core/quality_gate.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python ~/.claude-hooks/hooks/core/completion_checker.py"
          },
          {
            "type": "command",
            "command": "python ~/.claude-hooks/hooks/session/session_tracker.py"
          }
        ]
      }
    ]
  }
}